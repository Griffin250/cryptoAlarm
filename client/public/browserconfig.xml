<?xml version="1.0" encoding="utf-8"?>
<browserconfig>
    <msapplication>
        <tile>
            <square70x70logo src="/cryptoAlarmLogo.png"/>
            <square150x150logo src="/cryptoAlarmLogo.png"/>
            <wide310x150logo src="/cryptoAlarmLogo.png"/>
            <square310x310logo src="/cryptoAlarmLogo.png"/>
            <TileColor>#0B1426</TileColor>
        </tile>
        <badge>
            <polling-uri src="/api/notifications/count"/>
